<main>

  <h1>Leave a note on your favorite webcomic!</h1>
  <small>
    Note: Deleting the old comics will delete any associated notes as well.
  </small>
  <br>
  <br>
  <button id="btn-scrape">Get New Comics</button>
  <button id="btn-delete">Delete Old Comics</button>
  <div id="comics">
    {{#each comic}}
    <div class="comic-block" data-id="{{_id}}">
      <h3>{{title}}</h3>
      <p>Written by: {{author}}</p>
      {{#if hasArtist}}
      <p>Drawn by: {{artist}}</p>
      {{/if}}
      <a href="{{link}}">Read Now!</a>
      <img src="{{image}}" alt="{{title}}">
    </div>
    {{/each}}
  </div>

  <div id="notes"></div>
</main>

<script src="js/app.js"></script>